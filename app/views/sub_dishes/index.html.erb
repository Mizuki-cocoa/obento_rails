<% @page_title = "サイドメニュー一覧" %>
<h1><%= @page_title %></h1>
<%= link_to "箱選択に戻る", :boxes %>

<% if @sub_dishes.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>画像</th>
        <th>おすすめ</th>
        <th>サイドメニュー名</th>
        <th>カロリー</th>
      </tr>
    </thead>
    <tbody>
      <% @sub_dishes.each do |sub| %>
          <td>
            <% if sub.subdish_picture.attached? %>
              <%= image_tag sub.subdish_picture.variant(resize: "50x50") %>
            <% else %>
              <%= image_tag("noimage.png", size: "50x50", alt: "noimage") %>
            <% end %>
          </td>
          <% if sub.recommend == true then %>
            <td><%= image_tag("good.png", size: "20x20", alt: "good") %></td>
          <% else %>
            <td><%= image_tag("mu.png", size: "20x20", alt: "nogood") %></td>
          <% end %>
          <td style="text-align: right"><%= link_to sub.sub_dish_name, sub %></td>
          <td><%= sub.sub_kcal %></td>
          <td>
            <%= link_to "編集", [:edit, sub] %>
            <%= link_to "削除", sub, method: :delete,
              data: { confirm: "本当に削除しますか?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= form_tag(carts_path, method: "get") do %>
    <% @sub_dishes.each do |sub| %>
      <%= check_box_tag 'page[flag]', true, false, {} %>
      <%= sub.sub_dish_name%>
      数量<%= select_tag :cart, options_for_select([["1個",1],["2個",2],["3個",3],["4個",4],["5個",5]]), 
      multiple: true, disabled: true%>
    <% end %>
    <%= submit_tag "カートに入れる"%>
  <% end %>
<% else %>
  <p>サイド情報がありません</p>
<% end %>
