<% @page_title = "弁当箱一覧" %>
<h1><%= @page_title %></h1>
<% @box_ids = [0] %>

<% if @boxes.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>画像</th>
        <th>名前</th>
        <th>値段</th>
      </tr>
    </thead>
    <tbody>
      <% @boxes.each do |box| %>
        <% @box_ids.push(box.id.to_s) %>
        <tr>
          <% if box.id == 6 then %>
            <td><%= image_tag("rect#{box.id}.png", size: "140x100", alt: "rect") %></td>
          <% else %>
            <td><%= image_tag("rect#{box.id}.png", size: "100x100", alt: "rect") %></td>
          <% end %>
          <td style="text-align: right"><%= box.box_name %></td>
          <td><%= box.box_price %>円</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= form_tag(dishes_path, method: "get") do %>
    箱選択: <%= select_tag :box, options_for_select(@box_ids) %>
    <%= submit_tag "送信"%>
  <% end %>
<% else %>
  <p>箱情報がありません</p>
<% end %>