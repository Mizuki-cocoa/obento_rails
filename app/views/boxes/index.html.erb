<% @page_title = "弁当箱一覧" %>
<h1><%= @page_title %></h1>

<% if @boxes.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>画像</th>
        <th>名前</th>
        <th>値段</th>
      </tr>
    </thead>
    <tbody>
      <% @sum=0 %>
      <% @boxes.each do |box| %>
        <tr>
          <% @sum+=1 %>
          <% if @sum == 6 then %>
            <td><%= image_tag("rect#{@sum}.png", size: "140x100", alt: "rect") %></td>
          <% else %>
            <td><%= image_tag("rect#{@sum}.png", size: "100x100", alt: "rect") %></td>
          <% end %>
          <td style="text-align: right"><%= box.box_name %></td>
          <td><%= box.box_price %>円</td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>箱情報がありません</p>
<% end %>