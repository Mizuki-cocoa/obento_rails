<% @page_title = "お弁当" %>
<h1><%= @page_title %></h1>
<%= params[:sum] %>個入弁当
<% @sum2=params[:dish].length %>
<% @array=[] %>

<% for i in 0..(@sum2-1) %>
  <% @array.push(Dish.find(params[:dish][i].to_i).dish_name) %>
<% end %>
<%= @array %>

<%= form_tag(carts_path, method: "get") do %>
  <%= hidden_field_tag :sum1, params[:sum] %>
  <%= hidden_field_tag :dish1, params[:dish] %>
  <%= submit_tag "カートに入れる"%>
<% end %>

<p><%= link_to "再度選択し直す", :boxes %></p>