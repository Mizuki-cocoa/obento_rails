<% @page_title = "お弁当箱一覧" %>
<h1><%= @page_title %></h1>

<%= link_to "お弁当の新規登録", new_admin_box_path %>

<% if @boxes.present? %>
<table class="list">
  <thead>
    <tr>
      <th>容量</th>
      <th>お弁当箱名</th>
      <th>価格</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @boxes.each do |box| %>
    <tr>
      <td><%= box.box_num %>個</td>
      <td><%= box.box_name %></td>
      <td><%= box.box_price %>円</td>
      <td>
        <%= link_to "編集", [:edit, :admin, box] %> |
        <%= link_to "削除", [:admin, box], method: :delete,
          data: { confirm: "本当に削除しますか?" } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>メニューがありません。</p>
<% end %>
