<% @page_title = "おかず在庫管理" %>
<h1><%= @page_title %></h1>
<% @souzai = [] %>
<% @sum1 = 0 %>

<% if @dishes.present? %>
<table class="list">
    <thead>
        <tr>
            <th>おかず名</th>
            <th>在庫数</th>
        </tr>
    </thead>
    <tbody>
    <% @dishes.each do |dish| %>
        <%= dish.id %>
        <% @sum1+=1 %>
        <% @souzai.push(dish.dish_name.to_s) %>
        <tr>
            <td><%= dish.dish_name %></td>
            <td><%= dish.stock %></td>
        </tr>
    <% end %>
    </tbody>
</table>
<% else %>
    <p>おかず情報がありません</p>
<% end %>

<% @array = Array.new(@sum1).map{Array.new(2)} %>
<% for i in 0..(@sum1-1) %>
  <% @array[i][0]=@souzai[i] =%>
  <% @array[i][1]=i+1 =%>
<% end %>

<%= form_tag(stocks_admin_dishes_path, method: "get") do %>
    <%= select_tag :dish, options_for_select(@array) %>
    <%= select_tag :stocksum, options_for_select([["1個",1],["2個",2],["3個",3],["4個",4],["5個",5]]) %>
<%= submit_tag "送信"%>
<% end %>