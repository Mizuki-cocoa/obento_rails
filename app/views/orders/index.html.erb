<% @page_title = "配達情報入力" %>
<h1><%= @page_title %></h1>

<%= form_tag(new_order_path, method: "get") do %>
  <p>配達先住所</p>
  <%= select_tag :address, options_for_select([["現住所",1],["店舗",2]]) %>
  <p>希望日/希望時間</p>
  <%= datetime_field :date, Date.today, use_month_numbers: true%>
<%= submit_tag "送信"%>
<% end %>